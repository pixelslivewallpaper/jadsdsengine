<?xml version="1.0"?>
<doc>
  <basic type="animations">
    <screenCanvasResolution>
      <width>100</width>
      <height>100</height>
    </screenCanvasResolution>
    <canvasResolution>
      <maxWidth>100</maxWidth>
      <maxHeight>100</maxHeight>
    </canvasResolution>
    <bgColor>#fffafafa</bgColor>
  </basic>
  <images>
    <image>
      <fileName>cube.png</fileName>
      <imagePropertiesAnimation>
        <propetiesToAnimate>
          <property>
            <propertyName>Rotation</propertyName>
            <minimumDegreesValue>0</minimumDegreesValue>
            <maximumDegreesValue>360</maximumDegreesValue>
            <updateDegreesValue>6</updateDegreesValue>
            <currentDegreesValue>0</currentDegreesValue>
            <rotationSpeed>1</rotationSpeed>
            <animationRotationAction>Stop</animationRotationAction>
          </property>
        </propetiesToAnimate>
      </imagePropertiesAnimation>
      <events>
        <event>
          <eventType>OnClickUp</eventType>
          <eventActions>
            <eventAction>ChangeCustomCondition</eventAction>
            <eventAction>ChangeAnimationRotationAction</eventAction>
          </eventActions>
          <whenCustomConditionIs>running</whenCustomConditionIs>
          <newCustomCondition>stop</newCustomCondition>
          <animationRotationAction>Stop</animationRotationAction>
          <avoidRunThisEventMultipleTimes>true</avoidRunThisEventMultipleTimes>
        </event>
        <event>
          <eventType>OnClickUp</eventType>
          <eventActions>
            <eventAction>ChangeCustomCondition</eventAction>
            <eventAction>ChangeAnimationRotationAction</eventAction>
          </eventActions>
          <whenCustomConditionIs>stop</whenCustomConditionIs>
          <newCustomCondition>running</newCustomCondition>
          <animationRotationAction>Increase</animationRotationAction>
          <avoidRunThisEventMultipleTimes>true</avoidRunThisEventMultipleTimes>
        </event>
        <defaultCustomCondition>stop</defaultCustomCondition>
      </events>
      <left>25</left>
      <top>25</top>
      <speed>2</speed>
    </image>
  </images>
</doc>
