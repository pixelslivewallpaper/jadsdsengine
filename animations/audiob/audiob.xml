<?xml version="1.0"?>
<doc>
  <basic type="animations">
    <screenCanvasResolution>
      <width>400</width>
      <height>250</height>
    </screenCanvasResolution>
    <canvasResolution>
      <maxWidth>400</maxWidth>
      <maxHeight>250</maxHeight>
    </canvasResolution>
    <bgColor>#ffff9c35</bgColor>
  </basic>
  <audioPlayers>
    <audioPlayer>
      <playerID>backgroundAudio</playerID>
      <!--<audioFile>sound.m4a</audioFile>-->
      <!--<audioAutoPlay>true</audioAutoPlay>-->
      <!--<audioVolume>0.1</audioVolume>-->
    </audioPlayer>
  </audioPlayers>
  <images>
    <image>
      <fileName>stop.png</fileName>
      <left>60</left>
      <top>85</top>
      <events>
        <event>
          <eventType>OnClickDown</eventType>
          <eventActions>
            <eventAction>StopAudio</eventAction>
          </eventActions>
          <audioPlayerID>backgroundAudio</audioPlayerID>
        </event>
      </events>
    </image>
    <image>
      <fileName>play.png</fileName>
      <left>160</left>
      <top>85</top>
      <events>
        <event>
          <eventType>OnClickDown</eventType>
          <eventActions>
            <eventAction>PlayAudio</eventAction>
          </eventActions>
          <audioPlayerID>backgroundAudio</audioPlayerID>
          <audioFileToLoad>f.m4a</audioFileToLoad>
          <audioLoopToUpdate>true</audioLoopToUpdate>
          <!--<audioVolumeToUpdate>0.7</audioVolumeToUpdate>-->
        </event>
      </events>
    </image>
    <image>
      <fileName>pause.png</fileName>
      <left>260</left>
      <top>85</top>
      <events>
        <event>
          <eventType>OnClickDown</eventType>
          <eventActions>
            <eventAction>PauseAudio</eventAction>
          </eventActions>
          <audioPlayerID>backgroundAudio</audioPlayerID>
        </event>
      </events>
    </image>
  </images>
</doc>
