<?xml version="1.0"?>
<doc>
  <basic type="animations">
    <screenCanvasResolution>
      <width>23</width>
      <height>25</height>
    </screenCanvasResolution>
    <canvasResolution>
      <maxWidth>23</maxWidth>
      <maxHeight>25</maxHeight>
    </canvasResolution>
    <bgColor>#ffffffff</bgColor>
  </basic>
  <audioPlayers>
    <audioPlayer>
      <playerID>backgroundAudio</playerID>
      <audioFile>audio.m4a</audioFile>
      <autoPlay>true</autoPlay>
      <volume>0.3</volume>
      <loop>false</loop>
      <events>
        <event>
          <eventType>PlaybackIsFinished</eventType>
          <eventActions>
            <eventAction>ChangeCustomCondition</eventAction>
            <eventAction>StopAnimation</eventAction>
          </eventActions>
          <ids>aniSound</ids>
          <newCustomCondition>off</newCustomCondition>
        </event>
        </events>     
    </audioPlayer>
  </audioPlayers>
  <images>
    <image>
      <frames>
        <frame>
          <fileName>s1.png</fileName>
        </frame>
        <frame>
          <fileName>s2.png</fileName>
        </frame>
        <frame>
          <fileName>s3.png</fileName>
        </frame>
        <returnBackwardToFirstFrame>true</returnBackwardToFirstFrame>
      </frames>
      <left>0</left>
      <top>0</top>
      <speed>6</speed>
      <id>aniSound</id>
      <events>
        <event>
          <eventType>OnClickDown</eventType>
          <eventActions>
            <eventAction>ChangeCustomCondition</eventAction>
            <eventAction>PauseAudio</eventAction>
            <eventAction>StopAnimation</eventAction>
          </eventActions>
          <whenCustomConditionIs>on</whenCustomConditionIs>
          <newCustomCondition>off</newCustomCondition>
          <avoidRunThisEventMultipleTimes>true</avoidRunThisEventMultipleTimes>
          <audioPlayer>
            <playerID>backgroundAudio</playerID>
          </audioPlayer>
        </event>
        <event>
          <eventType>OnClickDown</eventType>
          <eventActions>
            <eventAction>ChangeCustomCondition</eventAction>
            <eventAction>PlayAudio</eventAction>
            <eventAction>ResumeAnimation</eventAction>
          </eventActions>
          <whenCustomConditionIs>off</whenCustomConditionIs>
          <newCustomCondition>on</newCustomCondition>
          <avoidRunThisEventMultipleTimes>true</avoidRunThisEventMultipleTimes>
          <audioPlayer>
            <playerID>backgroundAudio</playerID>
          </audioPlayer>
        </event>
        <defaultCustomCondition>on</defaultCustomCondition>
      </events>
    </image>
  </images>
</doc>
